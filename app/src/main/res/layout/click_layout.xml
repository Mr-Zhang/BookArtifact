<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
              android:id="@+id/ll_webview"
    android:layout_height="match_parent">

    <include layout="@layout/head_layout"/>
    <!-- 中间内容按钮-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.example.edu.bookartifact.ScrollWebView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.example.edu.bookartifact.ScrollWebView>
        <RelativeLayout
            android:id="@+id/lay_"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:layout_alignParentBottom="true"
            android:background="#aabbcc">
            <!-- 后退按钮-->
            <ImageButton
                android:id="@+id/nav_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/f_back"/>
            <!-- 前进按钮-->
            <ImageButton
                android:id="@+id/nav_forward"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/nav_back"
                android:background="@drawable/f_forward"/>
            <!-- 分享按钮-->
            <ImageButton
                android:id="@+id/f_share"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_centerInParent="true"
                android:background="@drawable/f_share"/>

            <!-- 刷新按钮-->
            <ImageButton
                android:id="@+id/reload"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/f_refresh"/>
            <!-- 历史按钮
            <ImageButton
                android:id="@+id/f_history"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="35dp"
                android:layout_toLeftOf="@id/reload"
                android:background="@drawable/f_history"/>
             -->
        </RelativeLayout>
    </RelativeLayout>



</LinearLayout>