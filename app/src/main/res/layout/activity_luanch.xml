<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_luanch"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.edu.bookartifact.LuanchActivity"
    android:background="@color/white"
    >
    <LinearLayout
        android:id="@+id/ll_launch_ad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/iv_launch_ad"
        android:src="@drawable/icon_jju"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:paddingLeft="20dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_luanch_bottom"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_ignore"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:background="@color/btn_ad_color"
            android:textColor="@color/white"
            android:text="@string/ignore"
            />
    </LinearLayout>
    </LinearLayout>
    <include layout="@layout/lunach_layout"/>

</LinearLayout>
